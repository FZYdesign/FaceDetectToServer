<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    >
    <!--布局1-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/distance_25dp"
            >
            <ImageView
                android:layout_width="@dimen/distance_80dp"
                android:layout_height="@dimen/distance_80dp"
                android:src="@drawable/logo_app"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/distance_45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/mAddAdmin_ly"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/distance_45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_green_15dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"

                    >
                    <ImageView
                        android:layout_width="@dimen/distance_25dp"
                        android:layout_height="@dimen/distance_25dp"
                        android:src="#000"
                        android:layout_marginRight="@dimen/distance_10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新增超级管理员"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/distance_25dp"
            >
            <ImageView
                android:layout_width="@dimen/distance_80dp"
                android:layout_height="@dimen/distance_80dp"
                android:src="@drawable/logo_app"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/distance_45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/mDeleteAdmin_ly"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/distance_45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_green_15dp"
                    android:paddingLeft="@dimen/distance_10dp"
                    android:paddingRight="@dimen/distance_10dp"


                    >
                    <ImageView
                        android:layout_width="@dimen/distance_25dp"
                        android:layout_height="@dimen/distance_25dp"
                        android:src="#000"
                        android:layout_marginRight="@dimen/distance_10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新增/删除超级管理员"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A006F"
                android:orientation="vertical">

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"

        android:marqueeRepeatLimit="marquee_forever"
        android:text="请刷二代身份证"
        android:textColor="@color/red"
        android:textSize="25sp"/>
    <!--1.-->
    <LinearLayout
        android:layout_width="@dimen/distance_200dp"
        android:layout_height="@dimen/distance_120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_50dp"
        android:layout_marginLeft="@dimen/distance_30dp"
        android:orientation="vertical">
        <!--时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/mTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10:40"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/mMounthAndWeek"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="10:40"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </LinearLayout>
        <!--设置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/toQueryList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_corner_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/distance_5dp"
                >

                <ImageView
                    android:layout_width="@dimen/distance_25dp"
                    android:layout_height="@dimen/distance_25dp"
                    android:background="@drawable/search"
                    />

                <TextView
                    android:id="@+id/queryList_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toSystemSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_15dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_brown"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/distance_5dp"
                >

                <ImageView
                    android:layout_width="@dimen/distance_25dp"
                    android:layout_height="@dimen/distance_25dp"
                    android:background="@drawable/basic_setting_n"
                    />

                <TextView
                    android:id="@+id/systemSetting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--2.-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/distance_60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/distance_50dp"
        android:layout_marginRight="@dimen/distance_50dp"


        android:background="@drawable/border_white"
        android:paddingLeft="@dimen/distance_15dp"
        android:paddingRight="@dimen/distance_15dp"
        >

        <TextView
            android:id="@+id/mOrganization_Logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="15"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_idinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
  >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_30dp"
            android:background="@drawable/round_blue_5dp"
            >
            <TextView
                android:layout_marginLeft="@dimen/distance_15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自定义"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/distance_20dp"
                android:paddingRight="@dimen/distance_20dp"
                android:paddingTop="@dimen/distance_20dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/distance_30dp"
                            android:background="@drawable/round_hui_ef"
                            android:padding="@dimen/distance_5dp"
                            android:hint="请输入身份证号"
                            android:textSize="@dimen/distance_15dp"
                            />
                            <EditText
                                android:layout_marginTop="@dimen/distance_30dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/distance_25dp"
                                android:background="@drawable/round_hui_ef"
                                android:padding="@dimen/distance_5dp"
                                android:hint="请输入姓名"
                                android:textSize="@dimen/distance_15dp"
                                />
                            </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/toBrush_Other"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/distance_10dp"
                            android:background="@drawable/round_blue_15dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            >
                            <ImageView
                                android:layout_width="@dimen/distance_25dp"
                                android:layout_height="@dimen/distance_25dp"
                                android:src="@drawable/internet"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="证件扫描"
                                android:textSize="@dimen/distance_15dp"
                                android:textColor="@color/white"
                                />
                            </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/distance_5dp"
                    android:paddingLeft="@dimen/distance_5dp"
                    >
                <LinearLayout
                    android:id="@+id/toBrushFace"
                    android:layout_marginRight="@dimen/distance_5dp"
                    android:layout_height="@dimen/distance_35dp"
                    android:layout_width="@dimen/distance_80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round_orange_15dp"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人脸拍照"
                        android:textSize="@dimen/distance_15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/toSubmit"
                    android:layout_marginLeft="@dimen/distance_15dp"
                    android:layout_height="@dimen/distance_35dp"
                    android:layout_width="@dimen/distance_80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round_green_15dp"
                    android:paddingRight="@dimen/distance_5dp"
                    android:paddingLeft="@dimen/distance_5dp"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确    定"
                        android:textSize="@dimen/distance_15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />
                </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>

            </LinearLayout>


        </LinearLayout>






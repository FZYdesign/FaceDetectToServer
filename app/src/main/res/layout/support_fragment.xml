<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="3"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
        >
        <ImageView
        android:layout_width="@dimen/distance_200dp"
        android:layout_height="@dimen/distance_200dp"
        android:src="@drawable/firs2d"
            />
        <TextView
            android:id="@+id/message_text"
            android:layout_marginTop="@dimen/distance_45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描二维码并关注"
            android:textSize="21dp"
            />
        <TextView
            android:id="@+id/organization_name"
            android:layout_marginTop="@dimen/distance_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*********公司"
            android:textSize="20dp"
            />

     </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/distance_40dp"
        android:layout_marginBottom="@dimen/distance_40dp"
        android:background="@color/colorBlue"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/versionName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件版本号"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/versionCode_text"
            android:layout_marginTop="@dimen/distance_55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件版本号"
            android:textSize="@dimen/distance_15dp"
            />
        <LinearLayout
            android:id="@+id/toUpdate"
            android:layout_marginTop="@dimen/distance_60dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_35dp"
            android:orientation="horizontal"
            android:background="@drawable/round_blue_15dp"
            android:padding="@dimen/distance_5dp"
            android:gravity="center"
            >
            <ImageView
           android:id="@+id/img"
           android:layout_width="@dimen/distance_25dp"
           android:layout_height="@dimen/distance_25dp"
           android:src="@drawable/update_app_img"
           android:layout_marginRight="@dimen/distance_5dp"
                />
            <TextView
                android:layout_toRightOf="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="软件更新"
                android:textSize="@dimen/distance_15dp"
                />
            </LinearLayout>

    </LinearLayout>


</LinearLayout>
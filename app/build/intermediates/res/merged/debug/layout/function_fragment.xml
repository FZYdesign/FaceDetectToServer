<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="@dimen/distance_25dp"
    android:layout_marginBottom="@dimen/distance_45dp"
    >
    <!--左侧-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="人脸识别门限值:"
            android:textSize="@dimen/distance_15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="指纹识别门限值:"
            android:textSize="@dimen/distance_15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="最大检索数量:"
            android:textSize="@dimen/distance_15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="数据存储::"
            android:textSize="@dimen/distance_15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="检测人脸质量:"
            android:textSize="@dimen/distance_15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="数据存储时间:"
            android:textSize="@dimen/distance_15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="切换待机背景:"
            android:textSize="@dimen/distance_15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            />
    </LinearLayout>
    <!--右侧-->
    <LinearLayout
        android:layout_marginLeft="@dimen/distance_25dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="@dimen/distance_200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_30dp"
                android:background="@drawable/round_hui_ef"
                android:layout_gravity="center"
                android:gravity="center"
                >
            <EditText
                android:id="@+id/faceGatevalve_Number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:hint="30-99"
                android:text="55"
                android:inputType="number"
                android:maxLength="2"
                android:background="@null"
                android:textSize="@dimen/distance_15dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_30dp"
                android:background="@drawable/round_hui_ef"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/fingerprintGatevalve_Number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="30-99"
                    android:text="30"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@null"
                    android:textSize="@dimen/distance_15dp"
                    android:paddingLeft="@dimen/distance_5dp"
                    android:paddingRight="@dimen/distance_5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/distance_200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_30dp"
                android:background="@drawable/round_hui_ef"
                android:layout_gravity="center"
                android:gravity="center"
                >
            <EditText
                android:id="@+id/retrieve_Number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:hint="1-10"
                android:text="5"
                android:inputType="number"
                android:maxLength="2"
                android:background="@null"
                android:textSize="@dimen/distance_15dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                />
                </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="循环覆盖"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="手动维护"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RadioGroup
                android:id="@+id/rg_quality"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/faceQuality_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="标准质量"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:id="@+id/faceQuality_system"
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="系统默认"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:id="@+id/faceQuality_high"
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="高质量"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="1个月"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="3个月"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="6个月"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />
                <RadioButton
                    android:layout_marginLeft="@dimen/distance_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/radiobuttom_select"
                    android:text="12个月"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/distance_10dp"
                    android:textColor="@color/colorHui_a7"
                    android:textSize="@dimen/distance_15dp"
                    />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/distance_200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:id="@+id/chouseBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_30dp"
                android:background="@drawable/round_hui_ef"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择待机背景"
                    android:textSize="@dimen/distance_15dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:id="@+id/mSure"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/distance_35dp"
                android:orientation="horizontal"
                android:background="@drawable/round_blue_15dp"
                android:layout_gravity="center|left"
                android:gravity="center"
                >
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/distance_25dp"
                android:layout_height="@dimen/distance_25dp"
                android:src="@drawable/ok"
                android:layout_marginRight="@dimen/distance_5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认配置"
                android:textSize="@dimen/distance_15dp"
                android:textColor="@color/white"
                />
                </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:gravity="center|right"
                />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

<ImageView
    android:id="@+id/go_back"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="@dimen/distance_15dp"
    android:layout_width="@dimen/distance_30dp"
    android:layout_height="@dimen/distance_30dp"
    android:src="@drawable/go_back"
    android:layout_gravity="center"
    />
        <LinearLayout
            android:id="@+id/Basic_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/distance_35dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/basic_setting_img"
            android:layout_width="@dimen/distance_25dp"
            android:layout_height="@dimen/distance_25dp"
            android:layout_marginLeft="@dimen/distance_5dp"
        />
       <TextView
           android:layout_marginLeft="@dimen/distance_5dp"
           android:id="@+id/basic_setting_text"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="基本配置"
           android:gravity="center"
           android:layout_gravity="center"
           android:textSize="@dimen/distance_20dp"
           />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/Function_setting"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/distance_35dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/function_setting_img"
            android:layout_width="@dimen/distance_25dp"
            android:layout_height="@dimen/distance_25dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            />
        <TextView
            android:layout_marginLeft="@dimen/distance_5dp"
            android:id="@+id/function_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="功能配置"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/distance_20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Admin_setting"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/distance_35dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"

        android:visibility="gone"

        >
        <ImageView
            android:id="@+id/admin_setting_img"
            android:layout_width="@dimen/distance_25dp"
            android:layout_height="@dimen/distance_25dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            />
        <TextView
            android:layout_marginLeft="@dimen/distance_5dp"
            android:id="@+id/admin_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理员设置"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/distance_20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Us_support_setting"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/distance_35dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/support_setting_img"
            android:layout_width="@dimen/distance_25dp"
            android:layout_height="@dimen/distance_25dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            />
        <TextView
            android:layout_marginLeft="@dimen/distance_5dp"
            android:id="@+id/support_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="技术支持"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/distance_20dp"
            />
    </LinearLayout>



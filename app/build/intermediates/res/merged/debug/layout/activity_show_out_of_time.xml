<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_hui"
    android:layout_margin="@dimen/distance_25dp"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/distance_45dp"
        android:layout_marginRight="@dimen/distance_45dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/distance_45dp"
                android:layout_height="@dimen/distance_45dp"
                android:src="@drawable/gantanhao"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="没明白什么意思？是图标和文字的间距不对，还是第一张图蓝圈里的button？还是画张图看看你想要的效果吧 "
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/distance_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/distance_70dp"
        android:layout_marginRight="@dimen/distance_70dp"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/distance_45dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/repeat_read_ly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/distance_45dp"
                android:orientation="horizontal"
                android:background="@drawable/round_orange_15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/distance_5dp"
                >
                <ImageView
                    android:layout_width="@dimen/distance_25dp"
                    android:layout_height="@dimen/distance_25dp"
                    android:src="@drawable/repeat_read"
                    android:layout_marginRight="@dimen/distance_10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新读卡"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                />
            <LinearLayout
                android:id="@+id/write_input_ly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/distance_45dp"
                android:orientation="horizontal"
                android:background="@drawable/round_blue_15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/distance_5dp"
                >
                <ImageView
                    android:layout_width="@dimen/distance_25dp"
                    android:layout_height="@dimen/distance_25dp"
                    android:src="@drawable/write_input"
                    android:layout_marginRight="@dimen/distance_10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手工输入"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/distance_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="没明白什么意思？是图标和文字的间距不对，还是第一张图蓝圈里的button？还是画张图看看你想要的效果吧 "
            android:textColor="#ff00"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/distance_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_white"
            android:padding="@dimen/distance_25dp"
            >

            <ImageView
                android:layout_width="@dimen/distance_150dp"
                android:layout_height="@dimen/distance_150dp"
                android:src="@drawable/card_fan"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_marginLeft="@dimen/distance_15dp"
                android:layout_width="@dimen/distance_100dp"
                android:layout_height="@dimen/distance_100dp"
                android:src="#a3a3a3"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
        <!--底部按钮-->
        <RelativeLayout
            android:layout_marginTop="@dimen/distance_20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingBottom="@dimen/distance_25dp"
            >

            <LinearLayout
                android:id="@+id/confirm_internet_ly"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/distance_40dp"
                android:orientation="horizontal"
                android:background="@drawable/round_blue_15dp"
                android:gravity="center"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"
                >
                <ImageView
                    android:layout_width="@dimen/distance_25dp"
                    android:layout_height="@dimen/distance_25dp"
                    android:src="@drawable/ok"
                    android:layout_marginRight="@dimen/distance_5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配置确认"
                    android:textSize="@dimen/distance_15dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_toRightOf="@+id/confirm_internet_ly"
                android:id="@+id/goBack_basicSetting_ly"
                android:layout_marginLeft="@dimen/distance_30dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/distance_40dp"
                android:orientation="horizontal"
                android:background="@drawable/round_orange_15dp"
                android:gravity="center"
                android:paddingLeft="@dimen/distance_10dp"
                android:paddingRight="@dimen/distance_10dp"


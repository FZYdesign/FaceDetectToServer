                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/radiobuttom_select"
                        android:text="3秒"
                        android:button="@null"
                        android:gravity="center_vertical"
                        android:background="#00000000"
                        android:drawablePadding="@dimen/distance_10dp"
                        android:textColor="@color/colorHui_a7"
                        android:textSize="@dimen/distance_15dp"

                        />
                    <RadioButton
                        android:layout_marginLeft="@dimen/distance_45dp"

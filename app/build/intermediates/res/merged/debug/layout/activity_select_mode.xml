<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:id="@+id/loginRoot"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
	    android:id="@+id/LinearLayouttitle"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:background="@drawable/action_bar_bg"
	    android:gravity="center_vertical|center_horizontal|center"
	    android:orientation="horizontal" >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="1:1比对"
		    android:textColor="@color/white"
		    android:textSize="18dp" />
	     
     </LinearLayout>

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_weight="1.0"
         
         android:orientation="vertical" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="选择身份证信息获取模式"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="10dip"
             android:textColor="#C0C0C0" 
             android:textSize="13dip"/>

        	 <LinearLayout
        	     android:id="@+id/btn_bluetooth"
        	     android:layout_width="fill_parent"
        	     android:layout_height="50dp"
        	     android:layout_centerHorizontal="true"
        	     android:layout_marginLeft="10dip"
        	     android:layout_marginRight="10dip"
        	     android:layout_marginTop="20dp"
        	     android:background="@drawable/btn_long"
        	     android:clickable="true"
        	     android:focusable="true"
        	     android:onClick="set_bluetooth"
        	     android:orientation="horizontal" >

        	     <LinearLayout
        	         android:layout_width="45dp"
        	         android:layout_height="45dp"
        	         android:layout_centerHorizontal="true"
        	         android:layout_marginLeft="10dp"
        	         android:background="@drawable/blueradio"
        	         android:orientation="vertical" >

        	     </LinearLayout>
		          <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="50dp"
				        android:orientation="vertical"
				        android:layout_centerHorizontal="true"
				        android:layout_marginLeft="5dp" 
				        >

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="25dp"
				        android:gravity="left"
				        android:text="蓝牙模式"
				        android:textColor="@color/white"
				        android:textSize="18dip"
				        android:textStyle="bold"
				        />

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"
				        android:gravity="left"
				        android:text="连接蓝牙身份证读卡器获取身份证头像"
				        android:textColor="#C0C0C0"
				        android:textSize="13dip" />

				</LinearLayout>
				</LinearLayout>
				
        	 	<LinearLayout
        	     android:id="@+id/btn_takepic"
        	     android:layout_width="fill_parent"
        	     android:layout_height="50dp"
        	     android:layout_centerHorizontal="true"
        	     android:layout_marginLeft="10dip"
        	     android:layout_marginRight="10dip"
        	     android:layout_marginTop="10dp"
        	     android:background="@drawable/btn_long"
        	     android:clickable="true"
        	     android:focusable="true"
        	     android:onClick="set_takepic"
        	     android:orientation="horizontal" >

        	     <LinearLayout
        	         android:layout_width="45dp"
        	         android:layout_height="45dp"
        	         android:layout_centerHorizontal="true"
        	         android:layout_marginLeft="10dp"
        	         android:background="@drawable/camorama"
        	         android:orientation="vertical" >

        	     </LinearLayout>
		          <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="50dp"
				        android:orientation="vertical"
				        android:layout_centerHorizontal="true"
				        android:layout_marginLeft="5dp" 
				        >

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="25dp"
				        android:gravity="left"
				        android:text="拍摄模式"
				        android:textColor="@color/white"
				        android:textSize="18dip"
				        android:textStyle="bold"
				        />

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"
				        android:gravity="left"
				        android:text="拍摄身份证获取身份证头像"
				        android:textColor="#C0C0C0"
				        android:textSize="13dip" />

				</LinearLayout>
				</LinearLayout>
				<LinearLayout
        	     android:id="@+id/btn_localpic"
        	     android:layout_width="fill_parent"
        	     android:layout_height="50dp"
        	     android:layout_centerHorizontal="true"
        	     android:layout_marginLeft="10dip"
        	     android:layout_marginRight="10dip"
        	     android:layout_marginTop="10dp"
        	     android:background="@drawable/btn_long"
        	     android:clickable="true"
        	     android:focusable="true"
        	     android:onClick="set_localpic"
        	     android:orientation="horizontal" >

        	     <LinearLayout
        	         android:layout_width="45dp"
        	         android:layout_height="45dp"
        	         android:layout_centerHorizontal="true"
        	         android:layout_marginLeft="10dp"
        	         android:background="@drawable/image_generic"
        	         android:orientation="vertical" >

        	     </LinearLayout>
		          <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="50dp"
				        android:orientation="vertical"
				        android:layout_centerHorizontal="true"
				        android:layout_marginLeft="5dp" 
				        >

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="25dp"
				        android:gravity="left"
				        android:text="图片模式"
				        android:textColor="@color/white"
				        android:textSize="18dip"
				        android:textStyle="bold"
				        />

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"
				        android:gravity="left"
				        android:text="在相册中选择身份证照片获取身份证头像"
				        android:textColor="#C0C0C0"
				        android:textSize="13dip" />

				</LinearLayout>
				</LinearLayout>
				<LinearLayout
        	     android:id="@+id/btn_idpic"
        	     android:layout_width="fill_parent"
        	     android:layout_height="50dp"
        	     android:layout_centerHorizontal="true"
        	     android:layout_marginLeft="10dip"
        	     android:layout_marginRight="10dip"
        	     android:layout_marginTop="10dp"
        	     android:background="@drawable/btn_long"
        	     android:clickable="true"
        	     android:focusable="true"
        	     android:onClick="set_idpic"
        	     android:orientation="horizontal" >

        	     <LinearLayout
        	         android:id="@+id/button3"
        	         android:layout_width="45dp"
        	         android:layout_height="45dp"
        	         android:layout_centerHorizontal="true"
        	         android:layout_marginLeft="10dp"
        	         android:background="@drawable/type_list"
        	         android:orientation="vertical" >

        	     </LinearLayout>
		          <LinearLayout
				        android:id="@+id/LinearLayout01"
				        android:layout_width="fill_parent"
				        android:layout_height="50dp"
				        android:orientation="vertical"
				        android:layout_centerHorizontal="true"
				        android:layout_marginLeft="5dp" 
				        >

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="25dp"
				        android:gravity="left"
				        android:text="NFC模式"
				        android:textColor="@color/white"
				        android:textSize="18dip"
				        android:textStyle="bold"
				        />

				    <TextView
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"
				        android:gravity="left"
				        android:text="输入身份证号获取身份证头像"
				        android:textColor="#C0C0C0"
				        android:textSize="13dip" />

				</LinearLayout>
				</LinearLayout>
          </LinearLayout>
        

</LinearLayout>
